{
  "expo": {
    "name": "Hasanat",
    "slug": "hasanat",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "scheme": "hasanat",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0D1117"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.hasanat.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Hasanat uses your location to fetch accurate prayer times for your area."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#0D1117"
      },
      "package": "com.hasanat.app",
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-secure-store",
        {
          "faceIDPermission": "Allow Hasanat to securely store your login credentials."
        }
      ],
      "expo-font",
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Hasanat uses your location to fetch accurate prayer times."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#C084FC"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Hasanat to access your photos to share iftar meals."
        }
      ]
    ]
  }
}